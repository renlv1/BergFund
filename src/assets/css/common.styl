$fontColor1 = #2c3a44
$titleColor = #0d3780

.wrap {
  width: 15.2rem;
  margin: 0 auto;
}
@media screen and (max-width: 1520px) {
  .wrap{
    width: 100%
    padding 0 40px
  }
}
@media screen and (max-width: 767px) {
  .wrap {
    width: 100%;
    padding: 0 20px;
  }
}
html, body {
  font-size: 100px;
}
@media screen and (max-width: 1440px) {
  html, body {
    font-size: 75px
  }
}
@media screen and (max-width: 1024px) {
  html, body {
    font-size: 53.33px
  }
}
@media screen and (max-width: 768px) {
  html, body {
    font-size: 40px
  }
}
.banner
  width 100%
  height 6.8rem
  position relative
  @media screen and (max-width: 767px)
    height auto
  .banner-img
    width 15.8rem
    height 100%
    position absolute
    right 0
    background-size cover!important
    background-position center!important
    @media screen and (max-width: 767px)
      width 100%
      position relative
      height 7.2rem
  .wrap
    height 100%
    position relative
    z-index 1
    display flex
    align-items center
    .banenr-ct
      width 6.2rem
      @media screen and (max-width: 767px)
        width 100%
        padding-top 50px
        padding-bottom 30px
      h3
        line-height 1.5
        font-size .6rem
        color $titleColor
        margin-bottom .2rem
        @media screen and (max-width: 767px)
          font-size 30px
          text-align center
          margin-bottom 15px
      p
        font-size .16rem
        line-height 2
        color #1a1a1a
        @media screen and (max-width: 767px)
          font-size 16px
